<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardBackgroundColor="@color/primary"
    android:layout_margin="2dp"
    android:translationZ="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/profileView"
            android:background="#d7d7d7"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:id="@+id/NameView"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/profileView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@screen_name"
            android:id="@+id/ScreenNameView"
            android:textColor="@color/material_grey_600"
            android:textSize="15dp"
            android:layout_below="@+id/NameView"
            android:layout_alignStart="@+id/NameView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/bright_foreground_inverse_material_dark"
            android:text="text"
            android:id="@+id/TextView"
            android:layout_marginRight="10dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/ScreenNameView"
            android:layout_alignStart="@+id/ScreenNameView" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mediaImage"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/TextView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:id="@+id/DateView"
            android:textColor="@color/secondary_text"
            android:layout_below="@+id/mediaImage"
            android:layout_alignStart="@+id/profileView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="likes: 5"
            android:id="@+id/LikeView"
            android:textColor="@color/secondary_text"
            android:textStyle="bold"
            android:translationZ="0dp"
            android:layout_alignBaseline="@+id/DateView"
            android:layout_alignBottom="@+id/DateView"
            android:layout_toStartOf="@+id/RetweetView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="retweets: 2"
            android:id="@+id/RetweetView"
            android:layout_marginLeft="5dp"
            android:textColor="@color/secondary_text"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/LikeView"
            android:layout_alignBottom="@+id/LikeView"
            android:layout_alignEnd="@+id/TextView" />

    </RelativeLayout>
  </android.support.v7.widget.CardView>