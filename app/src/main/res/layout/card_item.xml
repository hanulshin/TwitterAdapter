<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardBackgroundColor="@color/primary"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:id="@+id/NameView"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/accent"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/TextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@screen_name"
            android:id="@+id/ScreenNameView"
            android:layout_marginLeft="3dp"
            android:layout_alignBottom="@+id/NameView"
            android:layout_alignStart="@+id/LikeView" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="text"
            android:id="@+id/TextView"
            android:layout_below="@+id/DateView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="retweets: 2"
            android:id="@+id/RetweetView"
            android:layout_marginLeft="7dp"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:layout_below="@+id/TextView"
            android:layout_toEndOf="@+id/LikeView"
            android:layout_marginStart="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="likes: 5"
            android:id="@+id/LikeView"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:layout_below="@+id/TextView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:id="@+id/DateView"
            android:textColor="#d2d2d2"
            android:layout_below="@+id/NameView"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="#48b9f6" />

    </RelativeLayout>
  </android.support.v7.widget.CardView>